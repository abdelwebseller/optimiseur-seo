# Configuration de base
PROJECT_NAME=Semantra API
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Configuration de la base de données
DATABASE_URL=postgresql://user:password@localhost/semantra

# Configuration de sécurité
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuration CORS
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:3001"]

# Configuration Redis pour Celery
REDIS_URL=redis://localhost:6379/0

# Configuration des APIs externes
OPENAI_API_KEY=sk-your-openai-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# Configuration du crawl
DEFAULT_USER_AGENT=Semantra Bot 1.0
DEFAULT_CRAWL_DELAY=1000
DEFAULT_MAX_URLS=1000000
DEFAULT_RETRY_ATTEMPTS=3

# Configuration des modèles d'embedding
DEFAULT_EMBEDDING_MODEL=text-embedding-3-large

# Configuration Google Sheets
GOOGLE_SHEETS_CREDENTIALS_FILE=path/to/credentials.json

# Configuration des logs
LOG_LEVEL=INFO
LOG_FILE=logs/semantra.log 